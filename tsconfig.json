{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "es2015",
        "strict": true,
        "noImplicitAny": false,  // FIXME: only during migration
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}