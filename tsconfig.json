{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es2015",
        "outFile": "dist/app.js",
        "strict": true,
        "noImplicitAny": false,  // FIXME: only during migration
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}