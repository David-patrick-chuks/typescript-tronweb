{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noFallthroughCasesInSwitch": true,

        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "outDir": "lib"
    },
    "include": ["src"]
}
